    <!-- JavaScript for Parallax Cursor -->
    <script>
        // Create the custom cursor element
        const cursor = document.createElement('div');
        cursor.id = 'cursor';
        document.body.appendChild(cursor);

        // Parallax movement for the cursor
        document.addEventListener('mousemove', (e) => {
            const parallaxFactor = 0.15; // Adjust this factor to control the parallax effect

            // Calculate the offset of the mouse position relative to the center
            const mouseX = e.pageX - window.innerWidth / 2;
            const mouseY = e.pageY - window.innerHeight / 2;

            // Apply parallax transformation to the custom cursor
            cursor.style.transform = `translate(${mouseX * parallaxFactor}px, ${mouseY * parallaxFactor}px)`;
            cursor.style.left = `${e.pageX}px`;
            cursor.style.top = `${e.pageY}px`;
        });
    </script>

