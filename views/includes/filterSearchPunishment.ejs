<div class="filters">
    <!-- Reservation Filter -->
    <div class="filter-group">
        <label for="reservationFilter">Reservation Filter:</label>
        <select id="reservationFilter">
            <option value="">Select Filter</option>
            <option value="fine">Fine</option>
            <option value="noReservations">No Reservations</option>
            <option value="deactivation-all">Deactivation All</option>
        </select>
    </div>

    <!-- Status Filter -->
    <div class="filter-group">
        <label for="statusFilter">Status:</label>
        <select id="statusFilter">
            <option value="">Select Status</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
            <option value="all">All</option>
        </select>
    </div>

    <!-- Punishment Type Filter -->
    <div class="filter-group">
        <label for="punishmentTypeFilter">Punishment Type:</label>
        <select id="punishmentTypeFilter">
            <option value="">Select Punishment Type</option>
            <option value="baddebt">Bad Debt</option>
            <option value="overdue">Overdue</option>
            <option value="all">All</option>
        </select>
    </div>
</div>
