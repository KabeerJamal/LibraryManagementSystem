<body>
    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">U.K Library</div>
        <div class="nav-links">
            <a href="/home" class="btn">Home</a>
            <a href="/logout" class="btn">Logout</a>
        </div>
    </div>

    <!-- Flash Messages -->
    <div class="flash-messages">
        <% if (errors && errors.length> 0) { %>
            <% errors.forEach(function(message) { %>
                <p class="flash-message error-message">
                    <%= message %>.
                </p>
                <% }) %>
                    <% } %>

                        <% if (success && success.length> 0) { %>
                            <% success.forEach(function(message) { %>
                                <p class="flash-message success-message">
                                    <%= message %>.
                                </p>
                                <% }) %>
                                    <% } %>
    </div>

    <!-- User Portal Content -->
    <main class="portal-content">
        <h1>Welcome to the <%= user.username %> Portal</h1>

        <div class="user-actions">
            <a href="/userReservationDetails" class="btn">View Reservation Details</a>
        </div>

        <h2>Search for a Book</h2>
        <div class="search-icon">
            <i class="fas fa-search"></i>
        </div>

        <!-- Book Cards Section (for search results) -->
        <% if (books && books.length> 0) { %>
            <div class="card-container">
                <% books.forEach(book=> { %>
                    <div class="card">
                        <img src="<%= book.cover_image %>" alt="<%= book.title %>">
                        <div class="card-body">
                            <div class="card-title">
                                <%= book.title %>
                            </div>
                            <div class="card-author">by <%= book.author %>
                            </div>
                            <div class="card-description">
                                <%= book.description %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <div class="no-books">
                    <p>No books found for your search. Please try again.</p>
                </div>
                <% } %>
    </main>

    <!-- Modal for Available Copies -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Available Copies</h2>
            <ul id="bookCopies">
                <!-- Book copies will be dynamically inserted here -->
            </ul>
            <button id="reserve" class="btn">Reserve a Copy</button>
        </div>
    </div>

    <%- include('includes/footer') %>
</body>

</html>